{
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist/",
		"resolveJsonModule": true,
		"rootDir": "src/",
		"target": "ES2022",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"types": ["bun-types"]
	},
	"exclude": ["dist/"]
}
