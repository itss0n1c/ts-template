{
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext"],
		"module": "ESNext",
		"outDir": "dist/",
		"rootDir": "lib/",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"target": "ESNext",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true
	},
	"exclude": ["dist/", "node_modules", "**/node_modules/*"]
}
